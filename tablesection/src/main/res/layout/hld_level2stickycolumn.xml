<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingRight="@dimen/hld_sticky_cell_padding_right"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/hld_level2_background_light"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/divider_horizontal"
        android:layout_width="@dimen/hld_yellow_left_divider_width"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/hld_yellow_divider"/>
    <TextView
        android:textColor="@color/hld_level1_1textcolor"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="@dimen/hld_level_1_and_2_text_margin_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/sticky_col_text_view"
        android:textSize="@dimen/hld_12sp"
        tools:text="Sticky Column"
        app:layout_constraintStart_toEndOf="@+id/divider_horizontal"
        android:layout_width="@dimen/hld_sticky_column_text_width"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>