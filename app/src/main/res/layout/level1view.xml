<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/divider_horizontal"
        android:layout_width="@dimen/hd_4dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/yellow_divider"/>
    <LinearLayout
        android:id="@+id/main_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <LinearLayout

            android:orientation="vertical"
            android:background="@color/level1_background_light"
            android:padding="@dimen/hd_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/hd_8dp"
                android:id="@+id/header1"
                tools:text="Header1"
                android:textColor="@color/level1_1textcolor"
                android:textSize="@dimen/hd_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/hd_8dp"
                android:id="@+id/header2"
                tools:text="Header2"
                android:textSize="@dimen/hd_12sp"
                android:textColor="@color/level1_2textcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/hd_8dp"
                android:id="@+id/header3"
                tools:text="Header3"
                android:textSize="@dimen/hd_16sp"
                android:textColor="@color/level1_1textcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_marginEnd="@dimen/hd_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_hd_down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>

