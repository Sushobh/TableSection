<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingVertical="@dimen/cell_header_padding_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:textSize="@dimen/hd_12sp"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:id="@+id/text_view"
        android:textColor="@color/cell_header_blue"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/sort_indicator"
        android:layout_marginStart="@dimen/hd_2dp"
        android:src="@drawable/ic_sort"
        app:layout_constraintBottom_toBottomOf="@id/text_view"
        app:layout_constraintTop_toTopOf="@+id/text_view"
        app:layout_constraintStart_toEndOf="@+id/text_view"
        android:layout_width="@dimen/hd_12dp"
        android:layout_height="@dimen/hd_12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>